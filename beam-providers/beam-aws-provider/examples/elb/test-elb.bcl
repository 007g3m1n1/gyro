provider aws
    artifact: 'beam:beam-aws-provider:0.5'
    repositories: [
        'http://repo1.maven.org/maven2/',
        'https://repo.gradle.org/gradle/libs-releases/',
        'https://artifactory.psdops.com/public'
    ]
end

aws::credentials default
    profile-name: "psd-beam-sandbox"
    region: "us-east-2"
end

project: "beam"
environment: "sandbox"
serial: "v1"

aws::load-balancer elb-ex-test
    load-balancer-name: "elb-ex-test"
    security-groups: ["sg-3c0dfa46"]
    subnets: ["subnet-04d3e586552ea5fe1"]
    instances: ["i-01faa0ea54134538b"]

    health-check
        healthy-threshold: "2"
        interval: "30"
        target: "HTTP:80/png"
        timeout: "3"
        unhealthy-threshold: "2"
    end

    listener
        instance-port: "443"
        instance-protocol: "http"
        load-balancer-port: "443"
        protocol: "http"
    end

end