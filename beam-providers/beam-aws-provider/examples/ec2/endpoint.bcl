provider aws
    artifact: "beam:beam-aws-provider:0.5"
    repositories: [
        "http://repo1.maven.org/maven2/",
        "https://repo.gradle.org/gradle/libs-releases/",
        "https://artifactory.psdops.com/public"
    ]
end

aws::credentials default
    profile-name: "psd-beam-sandbox"
    region: "us-east-2"
end

aws::vpc vpc-example-for-endpoint
    cidr-block: "10.0.0.0/16"

    tags: {
        Name: "vpc-example-for-endpoint"
    }
end

aws::subnet subnet-public-us-east-1a-example-for-endpoint-1
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.0.0/26"
    availability-zone: "us-east-1a"

    tags: {
        Name: "subnet-public-us-east-1a-example-for-endpoint-1"
    }
end

aws::subnet subnet-public-us-east-1a-example-for-endpoint-2
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.3.0/26"
    availability-zone: "us-east-1a"

    tags: {
        Name: "subnet-public-us-east-1a-example-for-endpoint-2"
    }
end

aws::subnet subnet-public-us-east-1a-example-for-endpoint-3
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.6.0/26"
    availability-zone: "us-east-1a"

    tags: {
        Name: "subnet-public-us-east-1a-example-for-endpoint-3"
    }
end

aws::subnet subnet-public-us-east-1b-example-for-endpoint-1
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.1.0/26"
    availability-zone: "us-east-1b"

    tags: {
        Name: "subnet-public-us-east-1b-example-for-endpoint-1"
    }
end

aws::subnet subnet-public-us-east-1b-example-for-endpoint-2
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.4.0/26"
    availability-zone: "us-east-1b"

    tags: {
        Name: "subnet-public-us-east-1b-example-for-endpoint-2"
    }
end

aws::subnet subnet-public-us-east-1b-example-for-endpoint-3
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.7.0/26"
    availability-zone: "us-east-1b"

    tags: {
        Name: "subnet-public-us-east-1b-example-for-endpoint-3"
    }
end

aws::subnet subnet-public-us-east-1c-example-for-endpoint-1
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.2.0/26"
    availability-zone: "us-east-1c"

    tags: {
        Name: "subnet-public-us-east-1c-example-for-endpoint-1"
    }
end

aws::subnet subnet-public-us-east-1c-example-for-endpoint-2
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.5.0/26"
    availability-zone: "us-east-1c"

    tags: {
        Name: "subnet-public-us-east-1c-example-for-endpoint-2"
    }
end

aws::subnet subnet-public-us-east-1c-example-for-endpoint-3
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    cidr-block: "10.0.8.0/26"
    availability-zone: "us-east-1c"

    tags: {
        Name: "subnet-public-us-east-1c-example-for-endpoint-3"
    }
end

aws::route-table route-table-example-for-endpoint-1
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    subnet-ids: [
        $(aws::subnet subnet-public-us-east-1a-example-for-endpoint-1 | subnet-id),
        $(aws::subnet subnet-public-us-east-1b-example-for-endpoint-1 | subnet-id),
        $(aws::subnet subnet-public-us-east-1c-example-for-endpoint-1 | subnet-id)
    ]

    tags: {
        Name: "route-table-example-for-endpoint-1"
    }
end

aws::route-table route-table-example-for-endpoint-2
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    subnet-ids: [
        $(aws::subnet subnet-public-us-east-1a-example-for-endpoint-2 | subnet-id),
        $(aws::subnet subnet-public-us-east-1b-example-for-endpoint-2 | subnet-id),
        $(aws::subnet subnet-public-us-east-1c-example-for-endpoint-2 | subnet-id)
    ]

    tags: {
        Name: "route-table-example-for-endpoint-2"
    }
end

aws::route-table route-table-example-for-endpoint-3
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    subnet-ids: [
        $(aws::subnet subnet-public-us-east-1a-example-for-endpoint-3 | subnet-id),
        $(aws::subnet subnet-public-us-east-1b-example-for-endpoint-3 | subnet-id),
        $(aws::subnet subnet-public-us-east-1c-example-for-endpoint-3 | subnet-id)
    ]

    tags: {
        Name: "route-table-example-for-endpoint-3"
    }
end

aws::endpoint endpoint-example-gateway
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    service-name: 'com.amazonaws.us-east-1.s3'
    policy-doc-path: 'policy.json'
    type-interface: false
    route-table-ids: [
        $(aws::route-table route-table-example-for-endpoint-1 | route-table-id),
        $(aws::route-table route-table-example-for-endpoint-2 | route-table-id),
        $(aws::route-table route-table-example-for-endpoint-3 | route-table-id)
    ]
end

aws::endpoint endpoint-example-interface
    vpc-id: $(aws::vpc vpc-example-for-endpoint | vpc-id)
    service-name: 'com.amazonaws.us-east-1.ec2'
    policy-doc-path: 'policy.json'
    type-interface: true
    subnet-ids: [
        $(aws::subnet subnet-public-us-east-1a-example-for-endpoint-1 | subnet-id),
        $(aws::subnet subnet-public-us-east-1b-example-for-endpoint-1 | subnet-id),
        $(aws::subnet subnet-public-us-east-1c-example-for-endpoint-1 | subnet-id)
    ]
    security-group-ids: [
        'sg-0c6a15d90a475071e',
        'sg-0454a5fb5ea3a7a62',
        'sg-0da8f2491baf7f0c4'
    ]
end